<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@color/cardview_light_background"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/imgDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@mipmap/ic_delete" />

        <ImageView
            android:id="@+id/imgThumb"
            android:layout_width="409.6px"
            android:layout_height="307.2px"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#c2000000"/>

        <TextView
            android:id="@+id/txtFilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgThumb"
            android:layout_alignLeft="@+id/imgThumb"
            android:layout_alignRight="@+id/imgThumb"
            android:layout_alignStart="@+id/imgThumb"
            android:layout_alignEnd="@+id/imgThumb"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgThumb"
            android:layout_alignEnd="@+id/imgThumb"
            android:layout_alignLeft="@+id/imgThumb"
            android:layout_alignRight="@+id/imgThumb"
            android:layout_below="@+id/txtFilename"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="12dp"
            />


    </RelativeLayout>
</LinearLayout>